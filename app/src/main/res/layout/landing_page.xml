<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e3f2f0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#c8d5e9"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llTapOTPWr">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#145269">
            </TextView>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TapOTP"
                android:padding="25dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#4267b3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#145269">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:background="#cee4f5f4"
            android:orientation="vertical"
            android:id="@+id/llTakeTourWr"
            android:visibility="visible"
            android:layout_below="@id/llTapOTPWr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="18dp"
                android:id="@+id/txtTakeTour"
                android:text="Take a tour"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#145269">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="How it works?"
                android:textColor="#60b34a"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/howappworks"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="#3b640e"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#145269">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Permissions reuiqred"
                android:textColor="#60b34a"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/permissionreq"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="#3b640e"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/llPermissions"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage SMS Permissions"
                    android:id="@+id/btnManagePermissions"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Overlay Permissions"
                    android:id="@+id/btnOverlayPermissions"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#145269">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llTakeTourWr"
            android:orientation="vertical"
            android:background="#709aba"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect with me"
                android:textSize="18dp"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:weightSum="1">

                <ImageButton
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:id="@+id/imgbtnLinkedIn"
                    android:src="@drawable/linkedin"/>

                <ImageButton
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:id="@+id/imgbtnFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#145269">
            </TextView>

        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>