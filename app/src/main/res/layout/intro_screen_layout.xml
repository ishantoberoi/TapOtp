<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f2f0"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/llIntroScreenContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Header text"
                android:padding="10dp"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="#398ec7"
                android:singleLine="false"
                android:layout_marginTop="20dp"
                android:id="@+id/txtHeader"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgImageHolder"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/maximize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click on copy to Copy the OTP to clipboard Click on copy to Copy the OTP to clipboard"
                android:textSize="18dp"
                android:padding="20dp"
                android:gravity="center"
                android:textColor="#5894bc"
                android:singleLine="false"
                android:id="@+id/txtContent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/llIntroScreenContent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swipe left for next"
                android:textColor="#0f91dc"
                android:textSize="14dp"
                android:id="@+id/txtSwipeForNext"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:background="#0f91dc"
                android:id="@+id/btnDoneIntro"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                />

        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>